{
	"alusus module": {
		"prefix": "module",
		"body": [
			"import \"Srl/Console.alusus\";\n",
			"module ${1:NewModule} {",
			"\tfunc ${2:start}(argCount: Int, argv: ptr[array[ptr[Char]]]) {",
			"\t\tSrl.Console.print(${3:\"Hello World\"});",
			"\t};",
			"};\n",
			"${1:NewModule}.${2:start}(Process.argCount, Process.args);"
		],
		"description": "Code snippet for module declaration"
	},
	"alusus import": {
		"prefix": "import",
		"body": [
			"import \"${1:Hello World}\";"
		],
		"description": "Code snippet for import statement"
	},
	"alusus print": {
		"prefix": "print",
		"body": [
			"Srl.Console.print(${1:\"Hello World\"});"
		],
		"description": "Code snippet for print declaration"
	},
	"alusus for": {
		"prefix": "for",
		"body": [
			"def ${1:index}: int;",
			"for ${1:index}=0, ${1:index}<${2:length}, ${1:index}++ {",
			"\t$3",
			"};"
		],
		"description": "Code snippet for a for loop"
	},
	"alusus def": {
		"prefix": "def",
		"body": [
			"def ${1:variable}: ${2:int} = ${3:0};"
		],
		"description": "Code snippet for def statement"
	},
	"alusus function": {
		"prefix": "func",
		"body": [
			"${5:func} ${1:functionName}(${2:params}): ${3:Void} {",
			"\t${4:\/\/code}",
			"};"
		],
		"description": "Code snippet for function declaration"
	},
	"alusus extend function": {
		"prefix": "extend",
		"body": [
			"\t@expname[${1:extendFunctionName}]",
			"${4:func} ${2:functionName}(${2:params}): ${3:Void};"
		],
		"description": "Code snippet for extend function from shared library"
	},
	"alusus apm": {
		"prefix": "apm",
		"body": [
			"import \"Apm.alusus\";",
			"Apm.importFile(\"${1:author}/${1:name}\");"
		],
		"description": "Code snippet for import statement"
	}
}